  <h3>Education</h3>

  <h4> College </h4>
   <fieldset class="education personal_info nobullets" id="education">
      <ul>
        <row>
          <li class="col-md-12"> 
            <label> College Name: </label>
            <select id="college_name">
              <option>Select College</option>
              <option value='GMU'> George Mason University </option>
              <option value='JMU'> James Madison University </option>
              <option value='UMD'> University of Maryland </option>
              <option value='Penn State'> Pennsylvania State University </option>
              <option value='UVA'> University of Virginia </option>
              <option value='VA Tech'> Virginia Tech </option>
              <option> Other </option>
            </select>
          </li>
        </row>
        <row>
          <li class="col-md-12"> 
          <div class="other_college">
            <label> Enter college: </label>
            <input type='text' id='other_college'/>
          </div>
          </li>
        </row>  
        <row>
          <li class="col-md-6">
            <label> City: </label>
            <input type='text' id='college_city' class="form-control" placeholder="City"/>
          </li>
          <li class="col-md-6">
            <label> State: </label>
            <input type="text" id="college_state" class="form-control" placeholder="State Abbreviation"/>
          </li>
        </row>
        <row>
          <li class="col-md-6">
            <label>  Major(s): </label>
            <input type="text" id='major1' class="form-control" placeholder="First Major"/>
          </li>
