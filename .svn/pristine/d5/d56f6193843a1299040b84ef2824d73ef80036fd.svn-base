<div id="formLibraryTabContent" class="tab-control-content">
	<br/>

	<div class='row'>
		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-heading" role="tab" id="formFolderTreePanelHeading">
					<h4 class="panel-title">
						<div class="row">
							<div class="col-md-9">
								<a data-toggle="collapse" href="#formFolderTreePanelBody" aria-expanded="true" aria-controls="collapseOne"> Library </a>
							</div>
							<div class="col-md-3">
								<button type="button" class="btn btn-default btn-xs btn-new-top-folder pull-right" style="line-height:1;">+</button>
							</div>
						</div>
					</h4>
				</div>
				<div id="formFolderTreePanelBody" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="formFolderTreePanelHeading">
					<div class="panel-body">
						<div id="formFolderTree"></div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-9">
			<div class="panel panel-default">
				<div class="panel-heading" role="tab" id="formListPanelHeading">
					<h4 class="panel-title">
						<a data-toggle="collapse" href="#formListPanelBody" aria-expanded="true" aria-controls="collapseOne"> Forms </a>
					</h4>
				</div>
				<div id="formListPanelBody" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="formListPanelHeading">
					<div class="panel-body">
						<button type="button" class="btn btn-default btn-new-form" style="display:none;">New Form</button>
						<button type="button" class="btn btn-default btn-new-folder" style="display:none;">New Folder</button>
						<div id="folder-forms-grid-container"></div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div class="modal fade" id="confirmDeleteFormModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteFormModal" aria-hidden="true">
	    <div class="modal-dialog">
	        <div class="modal-content">
	            <div class="modal-header">
	            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	            <h4 class="modal-title" id="confirmDeleteFormModalTitle">Confirm Delete</h4>
	            </div>
	            <div class="modal-body">
	                <p>Are you sure you want to delete this form?</p>
	            </div>
	            <div class="modal-footer">
	                <button type="button" class="btn btn-default cancel-delete-form" data-dismiss="modal">Cancel</button>
	                <button type="button" class="btn btn-danger confirm-delete-form" data-dismiss="modal">Confirm</button>
				</div>
			</div>
		</div>
	</div>

	<div class="modal fade" id="newFolderFormModal" tabindex="-1" role="dialog" aria-labelledby="newFolderFormModal" aria-hidden="true">
	    <div class="modal-dialog">
	        <div class="modal-content">
	            <div class="modal-header">
	            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	            <h4 class="modal-title" id="newFolderFormModalTitle">New Folder</h4>
	            </div>
	            <div class="modal-body">
	                <form>
	                	<div class="form-group">
							<label>Folder Name</label>
							<input type="text" class="form-control txt-folder-name"/>
						</div>
	                </form>
	            </div>
	            <div class="modal-footer">
	                <button type="button" class="btn btn-default cancel-new-folder" data-dismiss="modal">Cancel</button>
	                <button type="button" class="btn btn-danger submit-new-folder" data-dismiss="modal">Create</button>
				</div>
			</div>
		</div>
	</div>

</div>